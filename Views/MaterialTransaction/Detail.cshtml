@model panasonic.ViewModels.ReportViewModel.DetailViewModel

@{
    ViewData["PanelTitle"] = "Material Report Detail";
}

<div class="card">
    <div class="card-body">
        <div class="mb-3">
            <p class="card-title">Transaction Detail</p>
            <div class="row">
                <div class="col-3">Transaction Type</div>
                <div class=" col-1">:</div>
                <div class="col-8">@Model.MaterialTransaction.Type</div>
            </div>
            <div class="row">
                <div class="col-3">Transaction Time</div>
                <div class="col-1">:</div>
                <div class="col-8">@Model.MaterialTransaction.CreatedAt</div>
            </div>
        </div>

        <div class="mb-3">
            <p class="card-title">User Detail</p>
            <div class="row">
                <div class="col-3">Employee ID</div>
                <div class=" col-1">:</div>
                <div class=" col-8">@Model.MaterialTransaction.User?.EmployeeID</div>
            </div>
            <div class="row">
                <div class="col-3">Employee Full Name</div>
                <div class="col-1">:</div>
                <div class="col-8">@Model.MaterialTransaction.User?.Fullname</div>
            </div>
        </div>

        @if (Model.MaterialTransaction.ProductionLine != null)
        {
                <div class="mb-3">
                    <p class="card-title">Production Line Detail</p>
                    <div class="row">
                        <div class="col-3">Remark</div>
                        <div class=" col-1">:</div>
                        <div class=" col-8">Line - @Model.MaterialTransaction.ProductionLine.Remark</div>
                    </div>
                </div>

        }

        <table class="table table-bordered dataTable no-footer dtr-inline">
            <thead>
                <tr>
                    <th>Material Number</th>
                    <th>Material Name</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var material in Model.MaterialTransaction.MaterialTransactionDetails)
                {
                        <tr>
                            <td>Material - @material.Material?.Number</td>
                            <td>@material.Material?.Name</td>
                            <td>@material.Quantity</td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>
