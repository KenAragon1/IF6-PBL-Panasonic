@{
    ViewData["PanelTitle"] = "Material Request List";
}


<div class="card">
    <div class="card-body">
        <table class="table table-bordered table-hover" id="materialRequestTable">
            <thead>
                <tr>
                    <th scope="col">No</th>
                    <th scope="col">Requested Date</th>
                    <th scope="col">Requested By</th>
                    <th scope="col">Material Name</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">Weight</th>
                    <th scope="col">Unit</th>
                    <th scope="col">Remark</th>
                    <th scope="col">Status</th>
                    <th scope="col">Action</th> <!-- Added Action column -->
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="create-material-request-form-modal" tabindex="-1" aria-labelledby="createMaterialRequestModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="createMaterialRequestModalLabel">Create New Material Request</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="createRequestForm">
                    <div class="mb-3">
                        <label for="requestedBy" class="form-label">Requested By</label>
                        <input type="text" id="requestedBy" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="requestedDate" class="form-label">Requested Date</label>
                        <input type="date" id="requestedDate" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="materialName" class="form-label">Material Name</label>
                        <input type="text" id="materialName" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="quantity" class="form-label">Quantity</label>
                        <input type="number" id="quantity" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="weight" class="form-label">Weight</label>
                        <input type="number" id="weight" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="unit" class="form-label">Unit</label>
                        <input type="text" id="unit" class="form-control" required>
                    </div>
                    <div class="mb-3">
                        <label for="remark" class="form-label">Remark</label>
                        <textarea id="remark" class="form-control" required></textarea>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="submitRequestButton">Submit</button>
            </div>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

<script>
    const requests = [
        { Id: 1, No: 1, RequestedDate: "2024-11-18", RequestedBy: "John", MaterialName: "Steel", Quantity: 100, Weight: 200, Unit: "kg", Remark: "Urgent", Status: "Pending" },
        { Id: 2, No: 2, RequestedDate: "2024-11-19", RequestedBy: "Jane", MaterialName: "Copper", Quantity: 50, Weight: 100, Unit: "kg", Remark: "Low priority", Status: "Approved" },
        { Id: 3, No: 3, RequestedDate: "2024-11-20", RequestedBy: "Mike", MaterialName: "Aluminum", Quantity: 75, Weight: 150, Unit: "kg", Remark: "Urgent", Status: "In Progress" },
    ];

    function renderTable() {
        const tableBody = document.querySelector("#materialRequestTable tbody");
        tableBody.innerHTML = ""; 

        requests.forEach(request => {
            const row = `
                <tr id="request-${request.Id}">
                    <td>${request.No}</td>
                    <td>${request.RequestedDate}</td>
                    <td>${request.RequestedBy}</td>
                    <td>${request.MaterialName}</td>
                    <td>${request.Quantity}</td>
                    <td>${request.Weight}</td>
                    <td>${request.Unit}</td>
                    <td>${request.Remark}</td>
                    <td>${request.Status}</td>
                    <td><button class="btn btn-success btn-sm">Manage</button></td> <!-- Added Action button -->
                </tr>
            `;
            tableBody.innerHTML += row;
        });
    }

    document.getElementById("submitRequestButton").addEventListener("click", function() {
        const requestedBy = document.getElementById("requestedBy").value;
        const requestedDate = document.getElementById("requestedDate").value;
        const materialName = document.getElementById("materialName").value;
        const quantity = document.getElementById("quantity").value;
        const weight = document.getElementById("weight").value;
        const unit = document.getElementById("unit").value;
        const remark = document.getElementById("remark").value;

        if (!requestedBy || !requestedDate || !materialName || !quantity || !weight || !unit || !remark) {
            alert("Please fill in all fields.");
            return;
        }

        // Generate a new request with an incremented Id
        const newRequest = {
            Id: requests.length + 1,
            No: requests.length + 1,
            RequestedDate: requestedDate,
            RequestedBy: requestedBy,
            MaterialName: materialName,
            Quantity: quantity,
            Weight: weight,
            Unit: unit,
            Remark: remark,
            Status: "Pending"
        };

        requests.push(newRequest);
        renderTable();

        // Close modal after submission
        document.querySelector('[data-bs-dismiss="modal"]').click();
    });

    document.addEventListener("DOMContentLoaded", renderTable);
</script>
