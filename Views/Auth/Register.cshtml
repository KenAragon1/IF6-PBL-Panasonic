@model panasonic.ViewModels.RegisterViewModel;

@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "Register";
}

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger text-sm-start">
    @ViewBag.ErrorMessage
</div>
}

<form class="mb-2" method="post" asp-action="Register">

    <div class="mb-2">
        <input type="text" id="employeedd" class="form-control" asp-for="UserRegisterDto.EmployeeID"
            placeholder="Employee ID">
        <span class="text-danger" asp-validation-for="UserRegisterDto.EmployeeID"></span>
    </div>

    <div class="mb-2">
        <input type="email" class="form-control" asp-for="UserRegisterDto.Email" id="email" placeholder="Email">
        <span class="text-danger" asp-validation-for="UserRegisterDto.Email"></span>
    </div>

    <div class="mb-2">
        <input type="text" id="fullname" class="form-control" asp-for="UserRegisterDto.Fullname"
            placeholder="Full Name">
        <span class="text-danger" asp-validation-for="UserRegisterDto.Fullname"></span>
    </div>

    <div class="mb-2">
        <input type="password" id="password" class="form-control" placeholder="Password"
            asp-for="UserRegisterDto.Password">
        <span class="text-danger" asp-validation-for="UserRegisterDto.Password"></span>

    </div>

    <div class="mb-2">
        <input type="password" id="confirmpassword" class="form-control" placeholder="Confirm Password"
            asp-for="UserRegisterDto.ConfirmPassword">
        <span class="text-danger" asp-validation-for="UserRegisterDto.ConfirmPassword"></span>

    </div>

    <button type="submit" class="btn btn-primary w-100">Register</button>
</form>

<span>Already Have An Account? <a asp-action="login">Log In</a> Here </span>
