@model panasonic.ViewModels.StoreViewModel.MaterialViewModel;


@{
	ViewData["PanelTitle"] = "Manage Materials in Store";
	var index = 1;
}

@section PanelButtons
{
	<a asp-controller="Store" asp-action="Send" class="btn btn-secondary btn-round">Send Material</a>
	<a asp-controller="Store" asp-action="Add" class="btn btn-success btn-round">Add Material</a>
}


<div class="card">
	<div class="card-body">
		<table class="table table-hover table-bordered">
			<thead>
				<tr>
					<th>No</th>
					<th>Material</th>
					<th>Quantity</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var material in Model.MaterialInventories)
				{
					<tr>
						<td>@(index++)</td>
						<td>@material.Material.Name</td>
						<td>@material.Quantity - @material.Material.UnitMeasurement</td>
					</tr>

				}
			</tbody>
		</table>




	</div>
</div>