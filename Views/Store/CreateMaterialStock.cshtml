@model panasonic.ViewModels.StoreViewModel.CreateMaterialStockViewModel;

@{
    ViewData["PanelTitle"] = "Create Material Stock in Store";
}

<div class="card">
    <div class="card-body">
        <form asp-controller="Store" asp-action="CreateMaterialStock" method="post">
            <div class="form-group">
                <label for="">Material</label>
                <select class="form-control" asp-for="@Model.MaterialId">
                    <option value="">Select Material</option>
                    @foreach (var material in Model.Materials!)
                    {
                        <option value="@material.Id">@material.Name</option>
                    }
                </select>
                <span class="text-danger" asp-validation-for="@Model.MaterialId"></span>
            </div>
            <div class="form-group">
                <label for="">Kuantitas</label>
                <input type="number" class="form-control" asp-for="@Model.Quantity">
                <span class="text-danger" asp-validation-for="@Model.Quantity"></span>
            </div>
            <div class="form-group">
                <label for="">Tanggal Kadaluarsa</label>
                <input type="date" class="form-control" asp-for="@Model.ExpirationDate">
                <span class="text-danger" asp-validation-for="@Model.ExpirationDate"></span>
            </div>
            <button type="submit" class="btn btn-primary">
                Submit
            </button>
        </form>
    </div>
</div>