@model List<panasonic.Models.Material>;




<div class="card  ">
    <div class="card-body">
        <div class="mb-3 d-flex justify-content-between align-items-center">
            <p class="fs-4 fw-bold">Manage Materials</p>
            <div class="">
                <button class="btn btn-primary" data-bs-toggle="modal"
                    data-bs-target="#create-material-form-modal">Create New
                    Material</button>
            </div>
        </div>
        <div class="mb-3">
            <input placeholder="Search Material Name" type="text" class="form-control">
        </div>
        <table class="table table-bordered table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Total Quantity</th>
                    <th scope="col">Total Weight</th>
                    <th scope="col">Barcode</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var Material in @Model)
                {
                    <tr>
                        <th scope="row">@Material.Id</th>
                        <td>@Material.Name</td>
                        <td>@Material.TotalQuantity</td>
                        <td>@Material.TotalWeight</td>
                        <td></td>
                        <td>
                            <a asp-action="storage" asp-route-id="@Material.Id" class="btn btn-primary">Manage</a>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

<div class="modal fade" id="create-material-form-modal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <p class="fs-5 modal-title">Create New Material</p>
                <button class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form action="">
                    <div class="">
                        <label for="" class="form-label">Material Name</label>
                        <input type="text" class="form-control">
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button class="btn btn-primary">Submit</button>
            </div>
        </div>
    </div>

</div>
