@model panasonic.ViewModels.MaterialViewModel.EditMaterialViewModel;

@{
    ViewData["PanelTitle"] = "Edit Material";
}



<div class="card">
    <div class="card-body">
        <form asp-controller="Material" asp-action="Edit" asp-route-id="@Model.Id" method="post"
            enctype="multipart/form-data">
            <div class="mb-2">
                <div class="form-group">
                    <label>Material Name</label>
                    <input type="text" class="form-control" asp-for="Name">
                </div>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <div class="form-group">
                    <label>Material Number</label>
                    <input type="number" class="form-control" asp-for="Number">
                </div>
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <div class="form-group">
                    <label>Unit Measurement</label>
                    <input type="text" asp-for="UnitMeasurement" class="form-control" />
                </div>
                <span asp-validation-for="UnitMeasurement" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <div class="form-group">
                    <label>Detail Measurement</label>
                    <input type="text" asp-for="DetailMeasurement" class="form-control" />
                </div>
                <span asp-validation-for="DetailMeasurement" class="text-danger"></span>
            </div>
            <div class="mb-2">
                <div class="form-group">
                    <label>Detail Quantity</label>
                    <input type="text" asp-for="DetailQuantity" class="form-control" />
                </div>
                <span asp-validation-for="DetailQuantity" class="text-danger"></span>
            </div>



            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $("#js-image-input").on("change", function (e) {
                const imageInput = e.target;
                const preview = $("#js-image-preview");

                if (imageInput.files && imageInput.files[0]) {
                    const reader = new FileReader();

                    reader.onload = function (e) {
                        preview.attr("src", e.target.result);
                        preview.show();
                    };

                    reader.readAsDataURL(imageInput.files[0]);
                }
            })
        })
    </script>
}