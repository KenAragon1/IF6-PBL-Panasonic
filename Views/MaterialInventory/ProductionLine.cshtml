@model panasonic.ViewModels.MaterialInventoryViewModel.PreperationRoomViewModel;

@{
    ViewData["PanelTitle"] = "Materials In Production Line";
    var index = 1;
}

<div class="card">
    <div class="card-body">
        @* <div class="form-group row">
            <label for="" class="col-form-label col-sm-2">Production Line</label>
            <div class="col-sm-10">
                <select name="" id="" class="form-control"></select>
            </div>
        </div> *@
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Material Number</th>
                    <th>Material Name</th>
                    <th>Quantity</th>
                    <th>Production Line</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var material in Model.MaterialInventories)
                {
                    <tr>
                        <td>@(index++)</td>
                        <td>Material - @material.Material!.Number</td>
                        <td>@material.Material!.Name</td>
                        <td>@material.Quantity</td>
                        <td>Line - @material.ProductionLine?.Remark</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>