@model panasonic.ViewModels.MaterialInventoryViewModel.PreperationRoomViewModel;

@{
    ViewData["PanelTitle"] = "Materials In PreperationRoom";
    var index = 1;
}

@section PanelButtons {
    <a class="btn btn-secondary btn-round" asp-controller="MaterialInventory" asp-action="Pickup">Pickup Material</a>
}

<div class="card">
    <div class="card-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>No</th>
                    <th>Material Number</th>
                    <th>Material Name</th>
                    <th>Quantity</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var material in Model.MaterialInventories)
                {
                    <tr>
                        <td>@(index++)</td>
                        <td>Material - @material.Material!.Number</td>
                        <td>@material.Material.Name</td>
                        <td>@material.Quantity @material.Material.DetailMeasurement</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>