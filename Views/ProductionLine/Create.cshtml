@model panasonic.ViewModels.ProductionLineViewModels.ProductionLineViewModel;

@{
    ViewData["PanelTitle"] = "Add New Production Line";
}


<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="">Line Remark</label>
                <input class="form-control" type="number" asp-for="ProductionLineDto.Remark">
                <span class=" form-text text-danger" asp-validation-for="ProductionLineDto.Remark"></span>
            </div>
            <div class="form-group">
                <label for="">Description</label>
                <textarea class="form-control" type="text" asp-for="ProductionLineDto.Description">
                </textarea>
                <span class=" form-text text-danger" asp-validation-for="ProductionLineDto.Description"></span>

            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
