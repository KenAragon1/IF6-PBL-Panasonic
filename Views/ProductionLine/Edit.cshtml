@model panasonic.ViewModels.ProductionLineViewModel.EditViewModel;

@{
    ViewData["PanelTitle"] = "Add New Production Line";
}


<div class="card">
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.ProductionLine.Id" method="post">
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label for="">Line Remark</label>
                <input class="form-control" type="number" asp-for="Remark" value="@Model.ProductionLine!.Remark">
                <span asp-validation-for="Remark"></span>
            </div>
            <div class="form-group">
                <label for="">Description</label>
                <textarea class="form-control" type="text" asp-for="Description">
                    @Model.ProductionLine!.Description
                </textarea>
            </div>
            <button class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
